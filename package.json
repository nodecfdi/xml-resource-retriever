{
  "name": "@nodecfdi/xml-resource-retriever",
  "description": "XSD and XLST resource downloader for local storage",
  "version": "2.0.1",
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/esm/types.d.ts",
        "default": "./dist/esm/types.js"
      },
      "require": {
        "types": "./dist/commonjs/types.d.ts",
        "default": "./dist/commonjs/types.js"
      }
    }
  },
  "imports": {
    "#src/*": "./src/*.js"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "gen:docs": "typedoc --options typedoc.json",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "prebuild": "pnpm lint:check && pnpm typecheck",
    "build": "tshy",
    "postbuild": "pnpm run gen:docs && git add docs/*",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@jsprismarine/typedoc-material-theme": "^1.0.4",
    "@nodecfdi/cfdi-core": "^0.6.2",
    "@nodecfdi/eslint-config": "^2.1.2",
    "@nodecfdi/prettier-config": "^1.2.0",
    "@nodecfdi/tsconfig": "^1.7.2",
    "@types/node": "^20.16.11",
    "@vitest/coverage-istanbul": "^2.1.3",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.12.0",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "is-in-ci": "^1.0.0",
    "jest-xml-matcher": "^1.2.0",
    "np": "^10.0.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tshy": "^3.0.2",
    "typedoc": "^0.26.9",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "file-type": "^19.6.0",
    "mime": "^4.0.4"
  },
  "peerDependencies": {
    "@nodecfdi/cfdi-core": ">=0.6.2"
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/xml-resource-retriever",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecfdi/xml-resource-retriever.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/xml-resource-retriever/issues"
  },
  "keywords": [
    "XSD",
    "XLST",
    "downloader",
    "retriver",
    "local",
    "storage",
    "node",
    "nodejs"
  ],
  "engines": {
    "node": ">=18 <=22 || ^16"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config",
  "packageManager": "pnpm@9.12.1",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test:run"
  },
  "tshy": {
    "selfLink": false,
    "exports": {
      ".": "./src/index.ts",
      "./types": "./src/types.ts"
    }
  }
}
